{
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "typescript": "^2.6.2",
    "tslint": "^5.8.0",
    "ts-jest": "^22.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
